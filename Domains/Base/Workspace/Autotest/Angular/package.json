{
  "name": "autocomplete",
  "version": "2.0.0",
  "description": "Allors Autocomplete",
  "repository": "https://github.com/Allors/allors2",
  "private": true,
  "license": "LGPL-3.0",
  "scripts": {
    "start": "npm run autotest",
    "build": "npx tsc",
    "dev": "npx tsc --watch",
    "lint": "tslint --fix --project ./tsconfig.json",
    "lint-fix": "tslint --fix --project ./tsconfig.json",
    "test": "npm run build && mocha ./out-tsc/**/*.spec.js",
    "tc:test": "npm run build && mocha --reporter mocha-teamcity-reporter ./out-tsc/**/*.spec.js",
    "autotest": "npm run build && node ./out-tsc/src/main && npx rimraf ./out-tsc"
  },
  "dependencies": {
    "@angular/compiler": "~7.2.0",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/core": "~7.2.0",
    "ejs": "^2.6.1",
    "moment": "^2.24.0",
    "ngast": "^0.2.4",
    "rxjs": "~6.3.3",
    "tsutils": "^3.10.0"
  },
  "devDependencies": {
    "@types/chai": "latest",
    "@types/mocha": "latest",
    "@types/node": "latest",
    "chai": "latest",
    "istanbul": "latest",
    "mocha": "latest",
    "mocha-teamcity-reporter": "latest",
    "rimraf": "^2.6.3",
    "ts-node": "latest",
    "typescript": "~3.2.2"
  }
}
