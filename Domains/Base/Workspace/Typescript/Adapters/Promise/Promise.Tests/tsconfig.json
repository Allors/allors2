{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib/",
    "sourceMap": true,
    "preserveSymlinks": true,
    "paths": {
      "@allors": ["./src/allors/index"],
      "*": ["./node_modules/*"]
    }
  },  
 "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "data",
    "lib"
  ]
}
