{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "outFiles": ["${workspaceRoot}/lib/**/*.js"],
            "sourceMaps": true,
            "env": { "NODE_ENV": "test"}
        }
    ]
}