{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
      "runtimeArgs": [
        "--no-timeouts",
        "--colors",
        "--compilers", "ts:ts-node/register",
        "--preserve-symlinks",
        "${workspaceRoot}/test/**/MetaDomain.spec.ts"
      ],
      "protocol": "inspector",
      "sourceMaps": true
    }
  ]
}