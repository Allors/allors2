{
  "compilerOptions": {
    "incremental": true,
    "outFile": "wwwroot/tsc.js",
    "module": "none",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2015.iterable",
      "dom"
    ]
  },
  "include": [
    "@types/jl.d.ts",
    "@types/moment.d.ts",
    "wwwroot/Allors/**/*",
    "wwwroot/app/**/*"
  ],
    "exclude": [
        "wwwroot/Allors/Client/Core/Angular/components/bootstrap/registerTemplates.ts"
    ],
    "compileOnSave": true
}
