@inject Allors.Workspace.AllorsAuthenticationStateProvider AuthenticationStateProvider

<div class="container mt-3">

    <div class="row">
        <div class="col">
            <img src="images/allors.svg" style="width:100px;" /> Login
        </div>
    </div>

    <div class="row">
        <div class="col">
            <input @bind="@UserName" placeholder="User Name"></input>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input @bind="@Password" placeholder="Password"></input>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <button @onclick="LogIn">Login</button>
        </div>
    </div>

</div>

@code {

    string UserName { get; set; }

    string Password { get; set; }

    async System.Threading.Tasks.Task LogIn()
    {
        await this.AuthenticationStateProvider.LogIn(this.UserName, this.Password);
    }
}
