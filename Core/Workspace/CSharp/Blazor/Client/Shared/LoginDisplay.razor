@inject Allors.Workspace.AllorsAuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView Context="AuthorizeContext">
    <Authorized>
        <MatTooltip Tooltip="Logout">
            <MatIconButton Icon="exit_to_app" RefBack="@context" OnClick="LogOut"></MatIconButton>
        </MatTooltip>
    </Authorized>
    <NotAuthorized>
        <MatTooltip Tooltip="Login">
            <MatIconButton Icon="account_box" RefBack="@context" Link="/account/login"></MatIconButton>
        </MatTooltip>
    </NotAuthorized>
</AuthorizeView>

@code {

    void LogOut()
    {
        this.AuthenticationStateProvider.LogOut();
    }
}
