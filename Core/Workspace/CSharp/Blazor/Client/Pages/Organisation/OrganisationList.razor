@page "/organisation/list"
@attribute [Authorize]
@inject Allors.Workspace.Client.Database Database
@inject Allors.Workspace.Workspace Workspace

@if (organisations == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var organisation in organisations)
            {
                <tr>
                    <td>@organisation.Name</td>
                    <td><a href="/organisation/edit/@organisation.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    Context Context;

    Organisation[] organisations;

    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        var context = new Context(this.Database, this.Workspace);

        var pull = new Pull
        {
            Extent = new Filter(M.Organisation.ObjectType),
        };

        var result = await context.Load(pull);

        this.organisations = result.GetCollection<Organisation>("Organisations");
    }
}
